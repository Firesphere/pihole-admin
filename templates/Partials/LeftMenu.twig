<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="img/logo.svg" alt="Pi-hole logo">
            </div>
            <div class="pull-left info">
                <p>Status</p>
                <span id="status">
                    <i class="fa fa-w fa-circle
                        {% if PiHoleStatus == 53 %}text-green-light{% elseif PiHoleStatus > 0 %}text-orange{% else %}text-red{% endif %}
                    "></i>
                    {% if PiHoleStatus == 53 %}
                        Active
                    {% elseif PiHoleStatus == 0 %}
                        Blocking disabled
                    {% elseif PiHoleStatus == -1 %}
                        DNS Service not running
                    {% elseif PiHoleStatus == -2 %}
                        Status unknown
                    {% else %}
                        DNS Service on port {{ PiHoleStatus }}
                    {% endif %}
                </span>
                <br/>
                <span title="Detected {{ CPUCount }} cores">
                    <i class="fa fa-w fa-circle text-green-light"></i>
                    Load:&nbsp;&nbsp;{{ Load0 }}&nbsp;&nbsp;{{ Load1 }}&nbsp;&nbsp;{{ Load2 }}
                </span>
                <br/>
                <span><i class="fa fa-w fa-circle {% if MemUse > 0.75 %}text-red{% else %}text-green-light{% endif %}"></i> Memory usage:&nbsp;&nbsp;{{ MemUse * 100 }}&thinsp;%</span>
                <br/>
                {% if Temperature %}
                    <span id="temperature">
                        <i class="fa fa-w fa-fire {% if Temperature > 60 %}text-red{% else %}text-vivid-blue{% endif %}"
                           style="width: 1em !important"></i>
                        Temp:&nbsp;<span id="rawtemp" hidden>{{ Temperature }}</span>
                        <span id="tempdisplay">{{ Temperature }}</span>
                </span>
                {% endif %}
            </div>
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header text-uppercase">Main</li>
            <!-- Home Page -->
            <li class="menu-main {{ Dashboard }}">
                <a href="/">
                    <i class="fa fa-fw menu-icon fa-home"></i> <span>Dashboard</span>
                </a>
            </li>

            <li class="header text-uppercase">Analysis</li>
            <!-- Query Log -->
            <li class="menu-analysis {{ Queries }}">
                <a href="/queries">
                    <i class="fa fa-fw menu-icon fa-file-alt"></i> <span>Query Log</span>
                </a>
            </li>
            <!-- Long-term database -->
            <li class="menu-analysis treeview {{ Longterm }}">
                <a href="#">
                    <i class="fa fa-fw menu-icon fa-history"></i> <span>Long-term Data</span>
                    <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                </a>
                <ul class="treeview-menu">
                    <li class="{{ LongtermGraph }}">
                        <a href="longterm/graph">
                            <i class="fa fa-fw menu-icon fa-chart-bar"></i> Graphics
                        </a>
                    </li>
                    <li class="{{ LongtermQueryLog }}">
                        <a href="longterm/queries">
                            <i class="fa fa-fw menu-icon fa-file-alt"></i> Query Log
                        </a>
                    </li>
                    <li class="{{ LongtermList }}">
                        <a href="longterm/lists">
                            <i class="fa fa-fw menu-icon fa-list"></i> Top Lists
                        </a>
                    </li>
                </ul>
            </li>

            <li class="header text-uppercase">Group Management</li>
            <!-- Group Management -->
            <li class="menu-group {{ Groups }}">
                <a href="groups">
                    <i class="fa fa-fw menu-icon fa-user-friends"></i> <span>Groups</span>
                </a>
            </li>
            <li class="menu-group {{ Clients }}">
                <a href="groups/clients">
                    <i class="fa fa-fw menu-icon fa-laptop"></i> <span>Clients</span>
                </a>
            </li>
            <li class="menu-group {{ Domains }}">
                <a href="groups/domains">
                    <i class="fa fa-fw menu-icon fa-list"></i> <span>Domains</span>
                </a>
            </li>
            <li class="menu-group {{ Adlists }}">
                <a href="groups/adlists">
                    <i class="fa fa-fw menu-icon fa-shield-alt"></i> <span>Adlists</span>
                </a>
            </li>

            <li class="header text-uppercase">DNS Control</li>
            <!-- Local DNS Records -->
            <!-- Enable/Disable Blocking -->
            <li id="pihole-disable" class="menu-dns treeview"
                style="{% if PiHoleStatus <= 0 %}display: none;{% else %}display: list-item;{% endif %}">
                <a href="#">
                    <i class="fa fa-fw menu-icon fa-stop"></i> <span>Disable Blocking&nbsp;&nbsp;&nbsp;<span
                                id="flip-status-disable"></span></span>
                    <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                </a>
                <ul class="treeview-menu">
                    <li>
                        <a href="#" id="pihole-disable-indefinitely">
                            <i class="fa fa-fw menu-icon fa-infinity"></i> Indefinitely
                        </a>
                    </li>
                    <li>
                        <a href="#" id="pihole-disable-10s">
                            <i class="fa fa-fw menu-icon fa-clock"></i> For 10 seconds
                        </a>
                    </li>
                    <li>
                        <a href="#" id="pihole-disable-30s">
                            <i class="fa fa-fw menu-icon fa-clock"></i> For 30 seconds
                        </a>
                    </li>
                    <li>
                        <a href="#" id="pihole-disable-5m">
                            <i class="fa fa-fw menu-icon fas fa-clock"></i> For 5 minutes
                        </a>
                    </li>
                    <li>
                        <a href="#" id="pihole-disable-cst" data-toggle="modal" data-target="#customDisableModal">
                            <i class="fa fa-fw menu-icon fa-user-clock"></i> Custom time
                        </a>
                    </li>
                </ul>
                <!-- <a href="#" id="flip-status"><i class="fa fa-stop"></i> <span>Disable</span></a> -->
            </li>
            <li id="pihole-enable" class="menu-dns treeview"
                style="{% if PiHoleStatus > 0 %}display: none;{% else %}display: list-item;{% endif %}">
                <a href="#">
                    <i class="fa fa-fw menu-icon fa-play"></i>
                    <span id="enableLabel">Enable Blocking&nbsp;&nbsp;&nbsp;
                            <span id="flip-status-enable"></span>
                        </span>
                </a>
            </li>
            <li class="menu-dns treeview {{ DNS }}">
                <a href="#">
                    <i class="fa fa-fw menu-icon fa-address-book"></i> <span>Local DNS</span>
                    <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                </a>
                <ul class="treeview-menu">
                    <li class="{{ DNSRecords }}">
                        <a href="dns/dns">
                            <i class="fa fa-fw menu-icon fa-address-book"></i> DNS Records
                        </a>
                    </li>
                    <li class="{{ CNAMERecords }}">
                        <a href="dns/cname">
                            <i class="fa fa-fw menu-icon fa-address-book"></i> CNAME Records
                        </a>
                    </li>
                </ul>
            </li>

            <li class="header text-uppercase">System</li>
            <!-- Tools -->
            <li class="menu-system treeview {{ Tools }}">
                <a href="#">
                    <i class="fa fa-fw menu-icon fa-tools"></i> <span>Tools</span>
                    <span class="warning-count hidden"></span>
                    <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                </a>
                <ul class="treeview-menu">
                    <!-- Pi-hole diagnosis -->
                    <li class="{{ Message }}">
                        <a href="tools/messages">
                            <i class="fa fa-fw menu-icon fa-file-medical-alt"></i> Pi-hole diagnosis
                            <span class="pull-right-container warning-count hidden"></span>
                        </a>
                    </li>
                    <!-- Run gravity.sh -->
                    <li class="{{ Gravity }}">
                        <a href="tools/gravity">
                            <i class="fa fa-fw menu-icon fa-arrow-circle-down"></i> Update Gravity
                        </a>
                    </li>
                    <!-- Query Lists -->
                    <li class=" {{ AdlistSearch }}">
                        <a href="tools/search">
                            <i class="fa fa-fw menu-icon fa-search"></i> Search Adlists
                        </a>
                    </li>
                    <!-- Audit log -->
                    <li class="{{ AuditLog }}">
                        <a href="tools/auditlog">
                            <i class="fa fa-fw menu-icon fa-balance-scale"></i> Audit log
                        </a>
                    </li>
                    <!-- Tail pihole.log -->
                    <li class="{{ Taillog }}">
                        <a href="tools/taillog">
                            <svg class="svg-inline--fa fa-fw menu-icon" style="height: 1.25em">
                                <use xlink:href="img/pihole_icon.svg#pihole-svg-logo"/>
                            </svg>
                            Tail pihole.log
                        </a>
                    </li>
                    <!-- Tail FTL.log -->
                    <li class="{{ TailFTL }}">
                        <a href="tools/taillog?FTL">
                            <svg class="svg-inline--fa fa-fw menu-icon" style="height: 1.25em">
                                <use xlink:href="img/pihole_icon.svg#pihole-svg-logo"/>
                            </svg>
                            Tail FTL.log
                        </a>
                    </li>
                    <!-- Generate debug log -->
                    <li class="{{ Debug }}">
                        <a href="tools/debug">
                            <i class="fa fa-fw menu-icon fa-ambulance"></i> Generate debug log
                        </a>
                    </li>
                    <!-- Network -->
                    <li class="{{ Network }}">
                        <a href="tools/network">
                            <i class="fa fa-fw menu-icon fa-network-wired"></i> Network
                        </a>
                    </li>
                </ul>
            </li>
            <!-- Settings -->
            <li class="menu-system {{ Settings }}">
                <a href="settings">
                    <i class="fa fa-fw menu-icon fa-cog"></i> <span>Settings</span>
                </a>
            </li>

            <!-- Donate button -->
            <li class="header text-uppercase">Donate</li>
            <li class="menu-donate">
                <a href="https://pi-hole.net/donate/" target="_blank">
                    <i class="fas fa-fw menu-icon fa-donate"></i> <span>Donate</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
