{
    "name": "firesphere/slim4-pihole",
    "description": "A Slim 4 version of the Pi-Hole admin interface",
    "license": "GPL-3.0-or-later",
    "type": "project",
    "keywords": [
        "slim-framework",
        "pihole",
        "slim",
        "slim4"
    ],
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "require": {
        "php": "^8.0",
        "ext-sqlite3": "*",
        "slim/slim": "4.*",
        "slim/psr7": "^1.5",
        "slim/twig-view": "^3.3"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "friendsofphp/php-cs-fixer": "^3",
        "phpunit/phpunit": "^8 || ^9",
        "selective/test-traits": "^2",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    }
}
