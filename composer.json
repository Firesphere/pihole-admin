{
    "name": "firesphere/slim4-pihole",
    "description": "A Slim 4 version of the Pi-Hole admin interface",
    "license": "GPL-3.0-or-later",
    "type": "project",
    "keywords": [
        "slim-framework",
        "pihole",
        "slim",
        "slim4"
    ],
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "require": {
        "php": "^8.0",
        "ext-sqlite3": "*",
        "slim/slim": "4.*",
        "slim/psr7": "^1.5",
        "slim/twig-view": "^3.3",
        "php-di/php-di": "^6.0.0",
        "bryanjhv/slim-session": "~4.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    }
}
